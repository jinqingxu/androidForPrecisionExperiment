<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/background"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#ffffffff"
    tools:context="com.example.ACTlab.FFittsAndroidApp.LoginScreen">

    <TextView android:text="@string/welcome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="#ff1a74ff"
        android:textSize="60sp"
        android:textStyle="bold"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="88dp" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/enter_instructions"
        android:textSize="35sp"
        android:id="@+id/textView"
        android:layout_below="@+id/textView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="44dp" />



    <EditText
        android:id="@+id/inpPID"
        android:layout_width="500dp"
        android:layout_height="70dp"
        android:inputType="textPersonName"
        android:layout_gravity="center"
        android:textColor="#ffafb3b3"
        android:background="#24313131"
        android:textSize="35sp"
        android:layout_below="@+id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="202dp" />

    <Button

        android:id="@+id/btnLogin"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:text="@string/login"
        android:textStyle="bold"
        android:textSize="40sp"
        android:background="#ff47c3ff"
        android:textColor="#cb363939"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/inpPID"
        android:layout_centerHorizontal="true" />
</RelativeLayout>
